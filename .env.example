# Fox QPPI Configuration
# Copy this file to .env and configure for your environment

# Ledger configuration
LEDGER_MAX_SIZE=10000
LEDGER_STORAGE_PATH=./data/ledger.json

# Security configuration
ENABLE_SIGNING=true
SIGNING_KEY_PATH=./keys/signing.key

# Alerts configuration
ALERT_THRESHOLD=100
ALERT_WEBHOOK_URL=

# Tails configuration
TAILS_RETENTION_DAYS=90
TAILS_ARCHIVE_PATH=./data/tails/

# Policy configuration
POLICY_FILE=./config/policies.json
POLICY_STRICT_MODE=true

# Node environment
NODE_ENV=development
# Fox QPPI Environment Configuration

# Node environment
NODE_ENV=development

# Ledger Configuration
LEDGER_SIGNING_ENABLED=false
LEDGER_MAX_ENTRIES=10000

# Security Policies
SECURITY_LEVEL=high
ENABLE_AUDIT_LOG=true

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_WEBHOOK_URL=

# Tail Configuration
TAIL_RETENTION_DAYS=90
TAIL_MAX_SIZE_MB=100
# QR-DNA Security Configuration

# Clock skew tolerance in milliseconds (default: 300000 = 5 minutes)
QR_DNA_CLOCK_SKEW_MS=300000

# Key rotation grace period in days (recommended: 30-90 days)
KEY_ROTATION_GRACE_PERIOD_DAYS=90

# Production: Choose ONE KMS provider
# AWS KMS
# AWS_KMS_KEY_ARN=arn:aws:kms:us-east-1:123456789:key/abc-def
# AWS_REGION=us-east-1

# Azure Key Vault
# AZURE_KEY_VAULT_URL=https://my-vault.vault.azure.net/
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# Google Cloud KMS
# GCP_KMS_KEY_NAME=projects/my-project/locations/us/keyRings/my-ring/cryptoKeys/my-key
# GCP_PROJECT_ID=my-project

# Database (for persistent key storage)
# DATABASE_URL=postgresql://user:pass@localhost:5432/qr_dna
# DATABASE_SSL=true
# DATABASE_POOL_SIZE=10

# Monitoring and Alerting
# ALERT_EMAIL=security@space-leaf-corp.example.com
# ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Logging
# LOG_LEVEL=info
# AUDIT_LOG_ENABLED=true
# Notifier Configuration
NOTIFIER_WEBHOOK_URL=https://example.com/webhook
NOTIFIER_HMAC_SECRET=your_hmac_secret_here
NOTIFIER_MOCK_SIGNAL=false

# QR-DNA Authentication
# Note: Never commit actual private keys. Use secure key management in production.
# QRDNA_PUBLIC_KEY=base64_encoded_public_key

# Ledger Signing (optional)
# LEDGER_SECRET_KEY=base64_encoded_secret_key_uint8array
