# Fox QPPI Environment Configuration

# Notifier Configuration
NOTIFIER_WEBHOOK_URL=https://example.com/webhook
NOTIFIER_SECRET_KEY=your-secret-key-here
NOTIFIER_MOCK_SIGNAL=false

# Access Control
ACCESS_TOKEN_SALT=random-salt-value
TOKEN_EXPIRY_HOURS=24

# QR-DNA Configuration
QR_DNA_PUBLIC_KEY=base64-encoded-public-key

# Tail Configuration
TAIL_CHILDREN_ENABLED=true
TAIL_PARENTS_ENABLED=true
TAIL_GOVERNMENT_ENABLED=false
TAIL_SAFETY_FIREWALL_ENABLED=true
TAIL_PRIVACY_REMINDER_ENABLED=true
TAIL_FLEXM_GUARDIAN_ENABLED=true
TAIL_AUTHORITY_SYNC_ENABLED=false
TAIL_COMMUNAL_BROADCAST_ENABLED=true

# Stress Test Configuration
STRESS_DURATION_SECONDS=60
STRESS_CONCURRENT_REQUESTS=10
STRESS_S3_BUCKET=fox-qppi-stress-results
STRESS_S3_REGION=us-east-1
