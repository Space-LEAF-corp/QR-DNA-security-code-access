# Fox QPPI Configuration
# Copy this file to .env and configure for your environment

# Ledger configuration
LEDGER_MAX_SIZE=10000
LEDGER_STORAGE_PATH=./data/ledger.json

# Security configuration
ENABLE_SIGNING=true
SIGNING_KEY_PATH=./keys/signing.key

# Alerts configuration
ALERT_THRESHOLD=100
ALERT_WEBHOOK_URL=

# Tails configuration
TAILS_RETENTION_DAYS=90
TAILS_ARCHIVE_PATH=./data/tails/

# Policy configuration
POLICY_FILE=./config/policies.json
POLICY_STRICT_MODE=true

# Node environment
NODE_ENV=development
