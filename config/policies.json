{
  "version": "1.0.0",
  "policies": {
    "ledger": {
      "immutable": true,
      "appendOnly": true,
      "requireSignature": false,
      "hashAlgorithm": "sha256",
      "maxEntrySize": 1048576
    },
    "security": {
      "enableEncryption": true,
      "keyRotationDays": 90,
      "minKeyLength": 32,
      "allowedAlgorithms": ["ed25519", "rsa-4096"]
    },
    "alerts": {
      "enabled": true,
      "levels": ["info", "warning", "error", "critical"],
      "rateLimit": {
        "maxPerMinute": 100,
        "maxPerHour": 1000
      }
    },
    "tails": {
      "enabled": true,
      "retentionPolicy": {
        "days": 90,
        "maxSize": 10737418240
      },
      "compressionEnabled": true
    },
    "validation": {
      "strictMode": true,
      "allowUnknownFields": false,
      "requireAllFields": true
    "security": {
      "minPasswordLength": 12,
      "requireTwoFactor": true,
      "sessionTimeout": 3600,
      "maxLoginAttempts": 5,
      "lockoutDuration": 900
    },
    "ledger": {
      "allowModification": false,
      "requireSignature": false,
      "auditEnabled": true,
      "compressionEnabled": true
    },
    "dataRetention": {
      "logRetentionDays": 90,
      "auditRetentionDays": 365,
      "backupEnabled": true,
      "backupFrequency": "daily"
    },
    "rateLimit": {
      "enabled": true,
      "maxRequestsPerMinute": 100,
      "maxRequestsPerHour": 1000
    },
    "alerting": {
      "enabled": true,
      "severityLevels": ["low", "medium", "high", "critical"],
      "notificationChannels": ["email", "webhook"]
  "privacyTiers": {
    "children": "private",
    "parents": "protected",
    "government": "public"
  },
  "accessControl": {
    "LEIF_STEWARD": {
      "permissions": ["BODY_MERGE", "READ", "WRITE", "ADMIN"],
      "description": "Full administrative access for LEIF stewards"
    },
    "PARENT": {
      "permissions": ["READ", "WRITE"],
      "description": "Parent access to family information"
    },
    "CHILD": {
      "permissions": ["READ"],
      "description": "Child read-only access"
    }
  },
  "notificationChannels": {
    "family": {
      "privacyLevel": "private",
      "redactFields": ["sessionId", "childName", "childId"]
    },
    "authority": {
      "privacyLevel": "protected",
      "redactFields": []
    },
    "public": {
      "privacyLevel": "public",
      "redactFields": []
    }
  }
}
