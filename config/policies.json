{
  "version": "1.0.0",
  "policies": {
    "authentication": {
      "tokenMaxAge": 300000,
      "maxFailedAttempts": 5,
      "blockDuration": 900000,
      "requireSignature": true,
      "allowedAlgorithms": ["ed25519"]
    },
    "keyManagement": {
      "keyRotationPeriod": 2592000000,
      "keyExpirationWarning": 604800000,
      "requireKmsInProduction": true,
      "minimumKeySize": 256
    },
    "monitoring": {
      "enabled": true,
      "alertThreshold": 0.1,
      "metricsRetention": 2592000000,
      "webhookTimeout": 5000
    },
    "security": {
      "enableLedger": true,
      "enableDeterrence": true,
      "enableRateLimiting": true,
      "maxRequestsPerMinute": 100
    },
    "privacy": {
      "requireConsent": true,
      "consentVersion": "1.0",
      "dataRetention": 7776000000,
      "enableAnonMode": false
    },
    "tails": {
      "children": {
        "enabled": true,
        "minAge": 13,
        "requireParentalConsent": true
      },
      "parents": {
        "enabled": true,
        "allowMonitoring": true
      },
      "government": {
        "enabled": false,
        "complianceReporting": false
      },
      "safetyFirewall": {
        "enabled": true,
        "filteringLevel": "medium"
      },
      "privacyReminder": {
        "enabled": true,
        "reminderInterval": 2592000000
      },
      "flexMGuardian": {
        "enabled": true,
        "defaultThreatLevel": "low"
      },
      "authoritySync": {
        "enabled": false,
        "syncInterval": 3600000
      },
      "communalBroadcast": {
        "enabled": true,
        "maxBroadcastsPerDay": 10
      }
    }
  }
}
